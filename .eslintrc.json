{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"airbnb",
		"prettier",
		"prettier/react"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"parser": "babel-eslint",
	"plugins": ["react", "prettier", "react-hooks"],
	"rules": {
		"require-jsdoc": "off",
		"prettier/prettier": ["error"],
		"react/jsx-filename-extension": [0],
		"react/prefer-stateless-function": "off",
		"react/jsx-props-no-spreading": [
			"error",
			{
				"html": "ignore",
				"custom": "ignore",
				"exceptions": [""]
			}
		],
		"import/no-cycle": "off"
	}
}
